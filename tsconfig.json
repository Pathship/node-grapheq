{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "pretty": true,
    "lib": [ "es2015" ]
  },
  "exclude": [
    "node_modules",
    "*.js",
    "test"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts"
  ]
}
